<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcom,"
        android:textColor="@color/cardview_dark_background"
        android:textSize="40sp"
        android:paddingLeft="100dp"
        android:paddingStart="0dp"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="we are glad to have you."
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        android:paddingLeft="100dp"
        android:paddingStart="0dp"
        tools:ignore="HardcodedText,RtlSymmetry" />


    <Button
        android:id="@+id/patientStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner"
        android:text="GET STARTED AS PATIENT"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/doctorStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner"
        android:text="GET STARTED AS A GENERAL PRACTITIONER"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/conStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner"
        android:text="GET STARTED AS A CONSULTANT"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/admin90"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner"
        android:text="ADMIN"
        android:textColor="@color/black" />


</LinearLayout>